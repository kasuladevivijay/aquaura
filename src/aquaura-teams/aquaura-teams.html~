<link rel="import" href="../../bower_components/polymer/polymer.html">
<link rel="import" href="../elements/elements.html">

<dom-module id="aquaura-teams">
  <template>
    <style>
      :host {
        display: block;
      }
      a{
    color: black;
    text-decoration: none;
   }

   a:hover{
    color: green;
    text-decoration: underline;
   }
</style>
<style is="custom-style">
  paper-card{
    --paper-card-header-image:{
      width: 240px;
      height:180px;
    }

    --paper-card-header-color: #000;

    }
    
   paper-button{
    margin:10px;
   }


   paper-material{
          margin: 20px auto;
    }

</style>
  <paper-material elevation="2" layout flex style="margin:20px; text-align: center;">
      <h2 style="padding:10px;">aquaura-teams</h2>
  </paper-material>

  <section onclick="clickHandler(event)">
  <paper-material elevation="3" layout flex  style="text-align: center; padding: 10px; margin: 20px;">
  <div layout flex horizontal style="margin: 10px; padding: 20px;">

  <template is="dom-repeat" items={{data}}>
    <paper-card elevation="4" heading="" image="{{item.image}}" style="margin: 20px;">
    
      <paper-button raised data-dialog="scrolling">{{item.name}}</paper-button>
          
    </paper-card>
    <paper-dialog id="scrolling">
      <h2><span>{{item.name}}</span></h2>
      <paper-dialog-scrollable>
        
        
        </paper-dialog-scrollable>
      <div class="buttons">
        <paper-button dialog-dismiss>Cancel</paper-button>
        <paper-button dialog-confirm autofocus>OK</paper-button>
      </div>
    </paper-dialog>
    
    
  </template>

  </div>
  </paper-material>
  
  </section>
  
  </template>
  <script>
    Polymer({

      is: 'aquaura-teams', 
      ready: function(){
        this.data = [
                      {name: 'House of Rain', image: '/images/HouseOfRain.jpg', id: 'hr'},
                      {name: 'Toofani Pirates', image: '/images/toofani_pirates.jpg', id: 'tp'},
                      {name: 'Thundering Storms', image: '/images/thundering_storm.jpg', id: 'ts'},
                      {name: 'MeghDoot', image: '/images/Meghdoot.png', id: 'md'},
                      {name: 'Tropical Thunder', image: '/images/tropical_thunder.jpg', id:'tt' },
                      {name: 'Rainbow Splendour', image: '/images/RainbowSplendour.jpg', id: 'rs' },
                      {name: 'CloudBurst', image: '/images/cloudburst.jpg', id: 'cb' }
        ]

       
      }    

    });

    document.addEventListener('WebComponentsReady', function() {
      console.log("in main function");
    });

    function clickHandler(e) {
      var button = e.target;
      while (!button.hasAttribute('data-dialog') && button !== document.body) {
        button = button.parentElement;
      }

      if (!button.hasAttribute('data-dialog')) {
        return;
      }

      var id = button.getAttribute('data-dialog');
      var dialog = document.getElementById(id);
      if (dialog) {
        dialog.toggle();
      }
    }
  </script>
</dom-module>
